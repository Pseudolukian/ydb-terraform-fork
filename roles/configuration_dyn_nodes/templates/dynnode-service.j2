
[Unit]
Description=YDB dynamic node
After=network-online.target rc-local.service
Wants=network-online.target
StartLimitInterval=10
StartLimitBurst=15
[Service]
Restart=always
RestartSec=1
User=ydb
PermissionsStartOnly=true
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=ydbd
SyslogFacility=daemon
SyslogLevel=err
Environment=LD_LIBRARY_PATH={{ lib_path }}
ExecStart={{ ydb_dir }}/release/{{ ydb_version }}/bin/ydbd server \
    --yaml-config  {{ cfg_path }}/config.yaml \
    --grpc-port {{ grpc_port }} \
    --ic-port {{ ic_port }}  \
    --mon-port {{ mon_port }}  \
    --tenant /{{ ydb_domain }}/{{ ydb_dbname }} \
    --node-broker grpc://static-node-1:2100 \
    --node-broker grpc://static-node-2:2101 \
    --node-broker grpc://static-node-3:2102

LimitNOFILE=65536
LimitCORE=0
LimitMEMLOCK=32212254720
[Install]
WantedBy=multi-user.target